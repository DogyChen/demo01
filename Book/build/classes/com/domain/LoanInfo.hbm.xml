<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.domain">

	<class name="LoanInfo" table="t_LoanInfo">

          <!-- 主键借阅编号 -->
          <id name="loadId" column="loadId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 图书对象 -->
          <many-to-one name="book"
            column="barcode"
            class="Book"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 多对一属性: 读者对象 -->
          <many-to-one name="reader"
            column="readerNo"
            class="Reader"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单日期型属性: 借阅时间 -->
          <property
            name="borrowTIme"
            column="borrowTIme"
            	type="string"
            	length="10"
          />

          <!-- 简单日期型属性: 归还时间 -->
          <property
            name="returnTIme"
            column="returnTIme"
            	type="string"
            	length="10"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
